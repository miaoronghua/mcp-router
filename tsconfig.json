{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mcp_router/shared": ["packages/shared/src"],
      "@mcp_router/shared/*": ["packages/shared/src/*"],
      "@mcp_router/remote-api-types": ["packages/remote-api-types/src"],
      "@mcp_router/remote-api-types/*": ["packages/remote-api-types/src/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/remote-api-types" },
    { "path": "./apps/electron" }
  ],
  "files": []
}