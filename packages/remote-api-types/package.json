{
  "name": "@mcp_router/remote-api-types",
  "version": "0.5.4",
  "description": "tRPC type definitions and schemas for MCP Router remote API",
  "keywords": [
    "mcp",
    "mcp-router",
    "trpc",
    "types",
    "schema",
    "api"
  ],
  "homepage": "https://github.com/miaoronghua/mcp-router#readme",
  "bugs": {
    "url": "https://github.com/miaoronghua/mcp-router/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miaoronghua/mcp-router.git",
    "directory": "packages/remote-api-types"
  },
  "license": "Apache-2.0",
  "author": "fjm2u",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.mjs",
      "require": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "knip": "cd ../.. && knip --workspace packages/remote-api-types",
    "prepublishOnly": "pnpm run build",
    "publish:npm": "pnpm publish --access public"
  },
  "dependencies": {
    "@trpc/client": "^11.5.1",
    "superjson": "^2.2.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@mcp_router/shared": "workspace:*",
    "@types/node": "^20.19.16",
    "eslint": "^9.35.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}